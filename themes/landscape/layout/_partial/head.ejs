<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <%
  var title = page.title;

  if (is_archive()){
    title = __('archive_a');

    if (is_month()){
      title += ': ' + page.year + '/' + page.month;
    } else if (is_year()){
      title += ': ' + page.year;
    }
  } else if (is_category()){
    title = __('category') + ': ' + page.category;
  } else if (is_tag()){
    title = __('tag') + ': ' + page.tag;
  }
  %>
  <title><% if (title){ %><%= title %> | <% } %><%= config.title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

  <% if (page.alt_zh) { %>
    <link rel="alternate" hreflang="en" href="<%= page.permalink %>">
    <link rel="alternate" hreflang="zh" href="<%- full_url_for('zh/' + page.alt_zh) %>">
    <link rel="alternate" hreflang="x-default" href="<%= page.permalink %>">
  <% } else if (page.alt_en) { %>
    <link rel="alternate" hreflang="en" href="<%- full_url_for('../' + page.alt_en) %>">
    <link rel="alternate" hreflang="zh" href="<%= page.permalink %>">
    <link rel="alternate" hreflang="x-default" href="<%- full_url_for('../' + page.alt_en) %>">
  <% } %>

  <%- open_graph({twitter_id: theme.twitter, google_plus: theme.google_plus, fb_admins: theme.fb_admins, fb_app_id: theme.fb_app_id}) %>
  <% if (theme.rss){ %>
    <link rel="alternate" href="<%- theme.rss %>" title="<%= config.title %>" type="application/atom+xml">
  <% } %>
  <% if (theme.favicon){ %>
    <link rel="icon" href="<%- theme.favicon %>">
  <% } %>
  <% if (config.highlight.enable){ %>
    <%- css('css/source-code-pro') %>
  <% } %>
  <%- css('css/style') %>
  <%- partial('google-analytics') %>

  <!-- Global site tag (gtag.js) - Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-92PL022Y56"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-92PL022Y56');
  </script>
</head>
